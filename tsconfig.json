{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
          "*": ["src/*"]
        },
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}